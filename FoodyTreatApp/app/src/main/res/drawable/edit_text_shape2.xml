<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid

                />
            <stroke
                android:width="3dp"
                android:color="#ff0000"
                />
            <corners
                android:radius="6dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient

                />
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                />
            <corners
                android:radius="6dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>